{{#if resume.education.length}}
<div class="container education-container">
  {{> title value="Education"}} {{#each resume.education}}
  <section class="item">
    {{> section-header name=this.institution website=this.url }}
    {{#if area}}
      <h5>{{area}}</h5>
    {{/if}}

    <p class="summary">{{#if studyType}}{{studyType}}{{/if}}{{#if score}}. <em>{{score}}</em>{{/if}}</p>

    {{#if courses.length}}
      <ul>
        {{#each courses}}
          <li>{{.}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </section>
  {{/each}}
</div>
{{/if}}
