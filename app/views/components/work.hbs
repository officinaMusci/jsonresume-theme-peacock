{{#if resume.work.length}}
<div class="container work-container">
  {{> title value="Experience"}}

  {{#each resume.work}}
  <section class="item">
    {{> section-header name=this.name website=this.url }}

    {{#if location}}
      <p class="pull-right">{{location}}</p>
    {{/if}}

    {{#if position}}
      <h5>{{position}}</h5>
    {{/if}}

    {{#if description}}
      {{#if summary}}
        <p class="summary"><em>{{description}}.</em> {{summary}}</p>
      {{else}}
        <p class="summary"><em>{{description}}</em></p>
      {{/if}}
    {{else if summary}}
        <p class="summary">{{summary}}</p>
    {{/if}}

    {{#if highlights.length}}
      <ul>
        {{#each highlights}}
          <li>{{.}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </section>
  {{/each}}
</div>
{{/if}}
