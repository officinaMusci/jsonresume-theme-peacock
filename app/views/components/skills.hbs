{{#if resume.skills.length}}
  <div class="skills-container">
    <div class="container">
      {{> title value="Skills"}}
      {{#each resume.skills}}
        <section class="item">
          {{#if name}}
            <h4>{{name}}</h4>
          {{/if}}
          {{#if level}}
            <h5>{{level}}</h5>
          {{/if}}
          {{#if keywords.length}}
            <ul>
              {{#each keywords}}
                <li>{{.}}</li>
              {{/each}}
            </ul>
          {{/if}}
        </section>
      {{/each}}
    </div>
  </div>
{{/if}}
